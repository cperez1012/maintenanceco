<div class="form_fields">
    <center>
        <h1> Register to MaintenanceCo </h1>
    <h6> Already have an account? &nbsp  
        <%= link_to "Sign In", login_path%>
    </h6>
    <br>

      
        <%= form_for(@user, url: signup_path) do |f| %>
            
            <%= f.label :username %>
            <%= f.text_field :username %><br><br>
            
            <%= f.label :email %>
            <%= f.email_field :email %> <br><br>
            
            <%= f.label :password %>
            <%= f.password_field :password %><br><br>
        
            
            <h6> ** All field musts be filled out. </h6><br>
            
            <%= f.submit "Create Account" %><br><br>

        <% end %>
    <p> or </p>
    <h6> 
        <%= link_to 'Sign Up with Gmail', 'auth/google_oauth2/'%>
        <%= image_tag 'Gmail.png', style: 'height:5%; width:5%'%> 
    </h6>
    <br>
    </center>

</div>

