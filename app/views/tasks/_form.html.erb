<%= form_for(Task.new) do |f| %><center>
    <%= f.label :project%><br>
    <%= f.text_field :project%><br>

    <br><%= f.label :priority%><br>
    <%= f.select :priority, [['Low', 1], ['Medium', 2], ['High', 3]]%><br>

    <br><%= f.label :status%><br>
    <%= f.select :status, [['Pending', 1], ['Completed', 2]]%><br>

    <br><%= f.label :name%><br>
    <%= f.text_field :name%><br>

    <br><%= f.label :summary%><br>
    <%= f.text_field :summary%><br>
    
    <br><%= f.label :description%><br>
    <%= f.text_area :description%><br>

    <br><%= f.submit %></center>
<% end %>

<%= link_to 'Back', tasks_path %>