<h1>Welcome to MaintenanceCo, <%=current_user.username %>!</h1><br><br>

  <h1>Lists of Pending Tasks</h1>

  <table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <tr>
    <td><strong>Project</strong></td>
    <td><strong>Priority</strong></td>
    <td><strong>Name<strong></td>
    <td><strong>Summary<strong></td>
    <td><strong>Description<strong></td>
  </tr>

  if 
  <% current_user.tasks.each do |task| %> if task.status.pending
    <tr>
      <td><%= task.project %></td>
      <td><%= task.priority %></td>
      <td><%= task.name %></td>
      <td><%= task.summary %></td>
      <td><%= task.description %></td>
      <td><%= button_to 'Edit', edit_task_path(task), method: :get %></td>
      <td><%= button_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

  else
  
  <h1>Lists of Completed Tasks</h1>

  
  <table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <tr>
    <td><strong>Project</strong></td>
    <td><strong>Priority</strong></td>
    <td><strong>Name<strong></td>
    <td><strong>Summary<strong></td>
    <td><strong>Description<strong></td>
  </tr>

  <% current_user.tasks.each do |task| %>
    <tr>
      <td><%= task.project %></td>
      <td><%= task.priority %></td>
      <td><%= task.name %></td>
      <td><%= task.summary %></td>
      <td><%= task.description %></td>
      <td><%= button_to 'Edit', edit_task_path(task), method: :get %></td>
      <td><%= button_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>